= render 'side_panel'
-if job_posts.blank?
  .col-lg-6
    = 'No Jobs found'
- else
  .col-lg-6
    - job_posts.each do |job|
      = render partial: 'job', locals: {job: job}
.row
  .col-lg-3
    - if if_current_user_is_recruiter
      = link_to "Add New Job", new_job_post_path, class: 'btn btn-default'
      = link_to "Back", root_path, class: 'btn btn-default'